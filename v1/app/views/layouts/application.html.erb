<!DOCTYPE html>
<html>
	<head>
	  <title>Kulaverse</title>
	  <%= stylesheet_link_tag    "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	</head>
	<body>

		<div class="navbar">
		  <div class="navbar-inner">
		    <div class="container">
					<ul class="nav pull-right">
						<% if current_user.nil? %>
						  <li class="dropdown">
						    <a href="#"
						       class="dropdown-toggle"
						       data-toggle="dropdown">
						       Sign in
						       <b class="caret"></b>
						    </a>
						    <ul class="dropdown-menu">
									<li><%= link_to "via Twitter", user_omniauth_authorize_path(:twitter) %></li>
									<li><%= link_to "via Facebook", user_omniauth_authorize_path(:facebook) %></li>
						    </ul>
						  </li>
						<% else %>
							<li><%= link_to "<img src='#{current_user.avatar_url}' width=32 height=32 class='avatar'/> #{current_user.name}".html_safe, '#' %></li>
							<li><%= link_to 'Sign out', destroy_user_session_path %></li>
						<% end %>
					</ul>
				  <a class="brand" href="/">
				    Kulaverse
				  </a>
          <ul class='nav'>
            <li>
    				  <a href="/">
    				    Play
    				  </a>
            </li>
            <li>
    				  <a href="/help/about">
    				    About
    				  </a>
            </li>
          </ul>
				</div>
			</div>
		</div>

		<div class='container-fluid'>

			<div class="alert alert-warning">Your browser must support WebGL to play.</div>

			<% if notice %><div class="alert"><%= notice %></div><% end %>
			<% if alert %><div class="alert alert-error"><%= alert %></div><% end %>

			<%= yield %>

		</div>

	</body>
</html>
